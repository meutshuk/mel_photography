---
import { GET_IMAGES } from "../lib/queries";
import client from "../lib/sanity";
import { urlFor } from "../lib/sanity";

const images = await client.fetch(GET_IMAGES);
---

<section class="text-neutral-700">
  <div class="container">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
    >
      {
        images.map((image: any) => (
          <div class="p-1">
            <div class="overflow-hidden rounded-lg">
              <a href={image.url} data-fancybox="gallery">
                <img
                  alt={image.title}
                  class="block h-full w-full object-cover object-center animate-fade-in transition duration-500 transform scale-100 hover:scale-110"
                  src={image.url}
                />
              </a>
            </div>
            <div class="p-2">
              <h2 class="text-lg font-bold">{image.title}</h2>
              <p class="text-sm">{image.location}</p>
              <p class="text-sm">{image.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
