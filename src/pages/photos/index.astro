---
import Layout from "../../layouts/Layout.astro";
import { GET_TITLE_IMAGES } from "../../lib/queries";
import client from "../../lib/sanity";

const images: TitleImages[] = await client.fetch(GET_TITLE_IMAGES);

function formatDate(dateString: Date) {
  const date = new Date(dateString);
  const day = String(date.getDate()).padStart(2, "0");
  const month = String(date.getMonth() + 1).padStart(2, "0"); // Months are zero-indexed
  const year = date.getFullYear();
  return `${day}/${month}/${year}`;
}

const currentPath = Astro.url.pathname;
---

<Layout>
  <a href="https://kuraunaito.com/">example</a>
  <ul class="space-y-4 mt-6">
    {
      images.map((i) => (
        <li class="p-2">
          <a
            href={`${currentPath}/${i.slug}`}
            class="text-base capitalize hover:underline"
          >
            {i.title}
          </a>
          <div class="flex items-center mt-2 text-gray-500 gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              height="20px"
              viewBox="0 -960 960 960"
              width="20px"
              fill="#5f6368"
